<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BookLibraryApp"
        tools:targetApi="31">
        <activity
            android:name=".BookEditActivity"
            android:exported="false"
            android:label="@string/title_activity_book_edit"
            android:theme="@style/Theme.BookLibraryApp" />
        <activity
            android:name=".UserEditActivity"
            android:exported="false"
            android:label="@string/title_activity_user_edit"
            android:theme="@style/Theme.BookLibraryApp" />
        <activity
            android:name=".UserProfileActivity"
            android:exported="false"
            android:label="@string/title_activity_user_profile"
            android:theme="@style/Theme.BookLibraryApp" />
        <activity
            android:name=".BookListActivity"
            android:exported="false"
            android:label="@string/title_activity_book_list"
            android:theme="@style/Theme.BookLibraryApp" />
        <activity
            android:name=".BookDetailActivity"
            android:exported="false"
            android:label="@string/title_activity_book_detail"
            android:theme="@style/Theme.BookLibraryApp" />
        <activity
            android:name=".BookRegistrationActivity"
            android:exported="false"
            android:label="@string/title_activity_book_registration"
            android:theme="@style/Theme.BookLibraryApp" />
        <activity
            android:name=".UserRegistrationActivity"
            android:exported="false"
            android:label="@string/title_activity_user_registration"
            android:theme="@style/Theme.BookLibraryApp" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.BookLibraryApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>